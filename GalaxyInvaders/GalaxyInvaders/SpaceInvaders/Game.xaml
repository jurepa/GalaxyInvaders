<Page
    x:Class="SpaceInvaders.Game"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpaceInvaders"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:vm="using:SpaceInvaders.ViewModels"
     >

    
    <Page.DataContext>
        <vm:VMGame></vm:VMGame>
    </Page.DataContext>

    <Page.Resources>
    </Page.Resources>

    <Grid x:Name="grid" Background="Black" Loaded="allowfocus_Loaded"  >
        <RelativePanel>
            <RelativePanel  Opacity="{Binding opacidadPausa,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignTopWithPanel="True">
                <RelativePanel.Background>
                    <SolidColorBrush Color="Black" Opacity="0.8"/>
                </RelativePanel.Background>
            </RelativePanel>
            <Image x:Name="vida1" Width="70" Height="70" Margin="20 20 0 0" Source="ms-appx:///Assets/Images/D.gif" Opacity="{Binding player.vida1, Mode=TwoWay}"  />
            <Image x:Name="vida2" Width="70" Height="70" Margin="10 20 0 0" Source="ms-appx:///Assets/Images/A.gif" Opacity="{Binding player.vida2, Mode=TwoWay}" RelativePanel.RightOf="vida1" />
            <Image x:Name="vida3" Width="70" Height="70" Margin="10 20 0 0" Source="ms-appx:///Assets/Images/M.gif" Opacity="{Binding player.vida3, Mode=TwoWay}" RelativePanel.RightOf="vida2" />
            <TextBlock Name="txtpuntuacion" Text="SCORE: " Margin="0 30 10 0" FontFamily="Assets\Pixel_Emulator.ttf#Pixel Emulator" Foreground="Green" RelativePanel.LeftOf="puntuacion" FontSize="60"/>
            <TextBlock Name="puntuacion" Text="{Binding puntuacion,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="0 30 200 0" FontFamily="Assets\Pixel_Emulator.ttf#Pixel Emulator" Foreground="Green" RelativePanel.AlignRightWithPanel="True" FontSize="60"/>

        </RelativePanel>
        <Border BorderBrush="Green" BorderThickness="3" MaxHeight="600" MaxWidth="1350" Margin="10">
            <Canvas x:Name="canvas" MaxHeight="600" MaxWidth="1350">
                <Canvas.Background>
                    <ImageBrush ImageSource="ms-appx:///Assets/Images/Fondo Space Invaders.jpg" />
                </Canvas.Background>
                <!--<Image Name="imagenPausa" Canvas.Top="250" Canvas.Left="450" Canvas.ZIndex="100" Opacity="{Binding opacidadPausa,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Source="/Assets/Images/Pausa.png"/>-->
                <RelativePanel   Canvas.Top="150" Canvas.Left="450" Canvas.ZIndex="100" Opacity="{Binding opacidadPausa,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" >
                    <RelativePanel>


                        <Image Name="imagenPausa"   RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Source="/Assets/Images/Pausa.png"/>

                        <Image Width="100" PointerPressed="btnSeguirclick" Source="ms-appx:///Assets/Images/Resume.png"  x:Name="btnBackMenu"  RelativePanel.Below="imagenPausa"  RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True" Margin="5"  Opacity="{Binding opacidadPausa,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"   />


                        <Image  x:Name="btnReiniciar" PointerPressed="btnReiniciarclick" RelativePanel.Below="imagenPausa" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True" Margin="5" Opacity="{Binding opacidadPausa,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  Width="100" Source="ms-appx:///Assets/Images/restart.png"  />


                        <Image  Width="100" PointerPressed="btnBackMenuClick" Source="ms-appx:///Assets/Images/Exit.png"  x:Name="btnContinue"  RelativePanel.Below="imagenPausa" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignRightWithPanel="True" Margin="5" Opacity="{Binding opacidadPausa,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>



                    </RelativePanel>
                </RelativePanel>

                <Image x:Name="player" Source="{Binding player.imagen}" Height="58" Width="72" Opacity="{Binding player.visible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                       Canvas.Left="{Binding player.posicionX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Canvas.Top="534"  />
            </Canvas>
        </Border>
        <RelativePanel x:Name="relativeBotonesTactiles" >
            <Image x:Name="btnIzq" Width="80" Source="ms-appx:///Assets/Images/FlechaIzq.png"  PointerPressed="{x:Bind vMGame.btnPointerPressed}" PointerExited="{x:Bind vMGame.btnPointerExited}"  Margin="100 0 0 30"  RelativePanel.AlignBottomWithPanel="True"  />
            <Image x:Name="btnDcha" Width="80" PointerPressed="{x:Bind vMGame.btnPointerPressed}" PointerExited="{x:Bind vMGame.btnPointerExited}" Source="ms-appx:///Assets/Images/FlechaDer.png"  Margin="50 0 0 30" RelativePanel.RightOf="btnIzq" RelativePanel.AlignBottomWithPanel="True" />
            <Image x:Name="btnDisparo" Width="80" Source="ms-appx:///Assets/Images/Crosshair2.png" Margin="0 0 150 30" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True" PointerExited="btnDisparo_PointerExited" />
        </RelativePanel>
        <!--<TextBox x:Name="text" KeyDown="text_KeyDown" />-->
    </Grid>
</Page>
